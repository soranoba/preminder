%% vim: set filetype=erlang : -*- erlang -*-

{minimum_otp_vsn, "18.0"}.

{erl_opts, [
            warnings_as_errors,
            warn_export_all,
            warn_untyped_record
           ]}.

{xref_checks, [
               fail_on_warning,
               undefined_function_calls
              ]}.

{cover_enabled, true}.

{edoc_opts, [
             {doclet, edown_doclet},
             {dialyzer_specs, all},
             {report_missing_type, true},
             {report_type_mismatch, true},
             {pretty_print, erl_pp},
             {preprocess, true}
            ]}.
{validate_app_modules, true}.

{ct_opts, [{dir, "ct"}]}.

{shell, [{apps, [preminder]}]}.

{relx, [{release, {preminder, "0.0.1"}, [preminder, recon, sasl]},
        {dev_mode, false},
        {include_erts, true},
        {extended_start_script, true},
        {sys_config, "sys.config"}
       ]}.

{deps, [
        {websocket_client, ".*", {git, "git://github.com/jeremyong/websocket_client", {tag, "v0.7"}}},
        {hackney, "1.6.1"},
        {jsone, "1.3.0"},
        {bbmustache, "1.2.0"}
       ]}.

{profiles, [{dev, [{deps, [
                           {recon, {git, "git://github.com/ferd/recon", {tag, "2.3.2"}}}
                          ]}
                  ]},
            {test, [{erl_opts, [export_all]},
                    {deps, [
                            {meck, {git, "git://github.com/eproxus/meck", {tag, "0.8.4"}}}
                           ]}
                   ]},
            {prod, [{deps, [
                            {recon, {git, "git://github.com/ferd/recon", {tag, "2.3.2"}}}
                           ]}
                   ]}
           ]}.
