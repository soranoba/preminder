%% vim: set filetype=erlang : -*- erlang -*-

{erl_opts, [
            warnings_as_errors,
            warn_export_all,
            warn_untyped_record
           ]}.

{xref_checks, [
               fail_on_warning,
               undefined_function_calls
              ]}.

{cover_enabled, true}.

{edoc_opts, [
             {doclet, edown_doclet},
             {dialyzer_specs, all},
             {report_missing_type, true},
             {report_type_mismatch, true},
             {pretty_print, erl_pp},
             {preprocess, true}
            ]}.
{validate_app_modules, true}.

{ct_opts, [{dir, "ct"}]}.

{shell, [{apps, [preminder]}]}.

{deps, [
        {websocket_client, ".*", {git, "git://github.com/jeremyong/websocket_client", {tag, "v0.7"}}},
        {hackney, "1.6.1"},
        {jsone, "1.3.0"}
       ]}.

{profiles, [{test, [{erl_opts, [export_all]}
                   ]}
           ]}.
